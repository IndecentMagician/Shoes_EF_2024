@model GenreEditVm;

@{
    ViewData["Title"] = Model.GenreId == 0 ? "Add New Genre" : "Edit Genre";
}
@{
    Layout = "_LayoutDash";
}

@Html.AntiForgeryToken()
        <div class="contact-page-1 space">
            <div class="contact-sec-1 space bg-repeat overflow-hidden" data-bg-src="assets/img/bg/jiji-bg2.png">
                <div class="container">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-xl-6 pe-xxl-5">
                            <div class="title-area">
                                <span class="sub-title style2"># UpSert</span>
                                <h2 class="sec-title text-white"> @(Model.GenreId == 0 ? "Add New Genre" : "Edit Genre")  <span class="text-theme">!</span></h2>
                            </div>
                            <form asp-action="UpSert" method="post" enctype="multipart/form-data" class="contact-form ajax-contact pb-xl-0 space-bottom">
                                <div class="row">
                                    <div class="form-group style-border2 col-md-6">
                                        <label asp-for="GenreName"></label>
                                        <input type="hidden" asp-for="GenreId" />
                                        <input asp-for="GenreName" class="form-control" />
                                        <span asp-validation-for="GenreName" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary">@(Model.GenreId == 0 ? "Create" : "Update")</button>
                                </form>  
                                </div>
                                </div>
                                </div>
            </div>
        </div>

@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial"></partial>
    }
}
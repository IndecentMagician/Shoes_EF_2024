@model SportEditVm;
@{
    Layout = "_LayoutDash";
}

@{
    ViewData["Title"] = Model.SportId == 0 ? "Add New Sport" : "Edit Sport";
}

@Html.AntiForgeryToken()

<div class="container">
    <div class="col-sm-12 col-xl-6">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">@(Model.SportId == 0 ? "Create New Sport" : "Update Sport")</h6>
            @using (Html.BeginForm("UpSert", "Sports", FormMethod.Post, new { enctype = "multipart/form-data", @class = "contact-form ajax-contact pb-xl-0 space-bottom" }))
            {
                @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="SportId" />

                    <div class="form-floating mb-3">
                        <input asp-for="SportName" class="form-control" id="floatingSportName" placeholder="Enter Sport Name" />
                        <label asp-for="SportName">Sport Name</label>
                        <span asp-validation-for="SportName" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">@(Model.SportId == 0 ? "Create" : "Update")</button>
            }
        </div>

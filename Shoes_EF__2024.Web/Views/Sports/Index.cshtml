@using Shoes_EF_2024.Web.ViewModels.Sports
@model IPagedList<SportListVm>
@using X.PagedList
@using X.Web.PagedList
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Sport List";
}

@section Header {
    @Html.Partial("_Header")
}
@section ColorSwitcher {
    @Html.Partial("_ColorSwitcher")
}
@section SearchBox {
    @Html.Partial("_SearchBox")
}
@section SideBox {
    @Html.Partial("_SideBox")
}
@section StikyWapper {
    @Html.Partial("_StickyWapper")
}

<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="col-6">
            <h3>Sport's' List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Sports" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo
            </a>
        </div>
    </div>
    <form method="get" class="form-inline" asp-action="Index">
        <div class="d-flex flex-row align-items-center">
            <div class="col-auto mx-1">
                <label for="pageSize">Show:</label>
            </div>
            <div class="col-auto mx-2">
                <select class="form-select" id="pageSize" name="pageSize" onchange="this.form.submit()" style="width:70px">
                    @{
                        var options = new List<int> { 5, 10, 15, 20 };
                        foreach (var option in options)
                        {
                            if (ViewBag.currentPageSize == option)
                            {
                                                                    <option selected value="@option">@option</option>
                            }
                            else
                            {
                                                                    <option value="@option">@option</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-auto mx-2" style="width: 200px;">
                <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="Search by..." value="@ViewBag.currentSearchTerm" />
            </div>
            <div class="col-auto d-flex">
                <button type="submit" class="btn btn-primary mx-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <button type="submit" class="btn btn-secondary" id="viewAll" name="viewAll" value="true">
                    <i class="bi bi-list"></i> View All
                </button>
            </div>
        </div>
    </form>
    <div class="table-responsive">
    <table class="table tournament-table">
        <thead>
            <tr>
                <th style="width:33%">Sport Name</th>
                <th style="width:33%">Prod.Qty</th>
                <th style="width:33%">Actions</th>
            </tr>
        </thead>
        <tbody>
                @if (Model.Any())
                {
                    foreach (var sports in Model)
                    {
                                            <tr>
                                                <td class="text-center">@sports.SportName</td>
                                                <td class="text-center">@sports.shoesQuantity</td>
                                                <td class="text-center">
                                                <a class="btn btn-warning" asp-controller="Sports" asp-action="UpSert" asp-route-id="@sports.SportId">
                                                    <i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                                    <a onclick="Delete('/Sports/Delete/@sports.SportId',@sports.SportId,'@sports.SportName')" class="btn btn-danger">
                                        <i class="bi bi-trash-fill"></i>Delete</a>
                                        </td>
                                            </tr>
                    }
                }
                else
                {
                            <tr>
                                <td colspan="3" class="text-center">
                                    No Sports have been added yet!
                                </td>
                            </tr>
                }
        </tbody>
    </table>
    <partial name="_Pager" model="@Model" />
    </div>
</div>
<!-- Incluir la sección de Footer -->
@section Footer {
    @Html.Partial("_Footer")
}

<!-- Incluir scripts adicionales si es necesario -->
@section Scripts {
    @Html.Partial("_Scripts")
}

@model ShoeEditVm

@{
    Layout = "_LayoutDash";
}
@{
    ViewData["Title"] = Model.ShoeId == 0 ? "Add New Shoe" : "Edit Shoe";
}

@Html.AntiForgeryToken()

<div class="container">
    <!-- Agregar el AntiForgeryToken dentro del formulario -->
    <form asp-action="UpSert" method="post" enctype="multipart/form-data" class="contact-form ajax-contact pb-xl-0 space-bottom">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-group style-border2 col-md-6">
                <input type="hidden" asp-for="ShoeId" />
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="QuantityPerUnit"></label>
                <input asp-for="QuantityPerUnit" class="form-control" />
                <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="UnitPrice"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group form-check col-md-6">
                <input type="checkbox" asp-for="Suspended" class="form-check-input" />
                <label asp-for="Suspended" class="form-check-label">Suspended</label>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-control" asp-items="@Model.Brands"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="SportId"></label>
                <select asp-for="SportId" class="form-control" asp-items="@Model.Sports"></select>
                <span asp-validation-for="SportId" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="GenreId"></label>
                <select asp-for="GenreId" class="form-control" asp-items="@Model.Genres"></select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="ColorID"></label>
                <select asp-for="ColorID" class="form-control" asp-items="@Model.Colors"></select>
                <span asp-validation-for="ColorID" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="SizeId"></label>
                <select asp-for="SizeId" class="form-control" asp-items="@Model.Sizes"></select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>

            <div class="form-group style-border2 col-md-6">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" type="file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">
                    @(Model.ShoeId == 0 ? "Create" : "Update")
                </button>
            </div>
        </div>
    </form>
</div>

